  "description": "Concierge Web Application",
  "main": "index.js",
  "scripts": {
    "start": "npm run back-end:start",
    "back-end:lint": "npx tslint -c tslint.json src/back-end/*.ts src/back-end/**/*.ts && echo Lint Successful\n",
    "back-end:typecheck": "npx tsc --project src/back-end && echo Typecheck Successful\n",
    "back-end:test": "echo TODO need to support typescript && npm run back-end:typecheck && npx mocha -cu bdd tests/back-end/index.js",
    "back-end:start": "npx ts-node --project src/back-end/tsconfig.json src/back-end/index.ts",
    "front-end:lint": "npx tslint -c tslint.json src/front-end/*.ts src/front-end/**/*.ts && echo Lint Successful\n",
    "front-end:typecheck": "npx tsc --project src/front-end/typescript && echo Typecheck Successful\n",
    "front-end:test": "echo TODO need to support typescript && npx mocha -cu bdd tests/front-end/index.js",
    "front-end:build": "npx grunt build",
    "front-end:watch": "npx grunt watch"
  },
