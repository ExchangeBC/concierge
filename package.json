    "pathmodify": "^0.5.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-markdown": "^4.0.6",
    "reactstrap": "^7.1.0",
    "require-dir": "^1.2.0",
    "serve": "^10.1.2",
    "sha.js": "^2.4.11",
