{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "incremental": true,
    "paths": {
      "front-end/*": ["./*"],
      "shared/*": ["../../shared/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.json", "**/*.js"]
}
